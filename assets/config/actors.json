{
	/* STATS

	speed is a max of 10 and indicates how long it takes
	the entity to move one tile - calculated as delayTime = (10-speed) * scaler

	*/
	basic:{
		name:"basic",
		stats:{
			// vitality designates starting health
			vit:10,
			// strength is a multiplier for attacks
			str:5,
			// dexterity determines how many ActionPoints you get
			dex:5,
			// speed determines how many MovementPoints you get
			spd:3
		}
	},
	scout:{
		parent:'basic',
		name:"scout",
		stats:{
			vit:6,
			dex:3,
			spd:10
		}
	},
	heavy:{
		parent:'basic',
		name:"heavy",
		stats:{
			vit:15,
			str:8,
			dex:3,
			spd:2
		}
	}
}